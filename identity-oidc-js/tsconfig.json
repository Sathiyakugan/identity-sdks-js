{
    "compilerOptions": {
        "baseUrl": "/",
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2017", "es7", "es6", "esnext", "dom"],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "jsx": "react",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./dist",
        "paths": {
            "*": ["types/*"]
        }        
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist", 
        "test-configs",
        "src/**/tests/*",
        "**/*.test.ts"
    ]
}
