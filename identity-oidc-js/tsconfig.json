{
    "compilerOptions": {
        "baseUrl": "/",
        "esModuleInterop": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./dist",
        "paths": {
            "*": ["types/*"]
        }
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "dist", 
        "test-configs",
        "src/**/tests/*",
        "**/*.test.ts"
    ]
}
